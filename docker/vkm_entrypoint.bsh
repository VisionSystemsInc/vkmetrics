#!/usr/bin/env bash

set -eu
source /common_entrypoint.bsh

# check for pipenv lock file
if [ ! -s "${VKM_SOURCE_DIR}/Pipfile.lock" ]; then
  pipenv lock
fi

# run a command
if [ "${@+$1}" == "test" ]; then
  pipenv run bash /src/scripts/test.bsh
elif [ "${@+$1}" = "enter" ]; then
  pipenv shell
else
  exec "${@}"
fi

