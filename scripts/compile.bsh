#!/usr/bin/env bash

set -euE

pushd ${VKM_BUILD_DIR_DOCKER}
if [ ! -f .cmake_ran ] || [ "${VKM_FORCE_RUN_CMAKE}" == "1" ]; then
  cmake -G Ninja /src -DCMAKE_BUILD_TYPE=${VKM_BUILD_TYPE} -DCMAKE_INSTALL_PREFIX=/install
  touch .cmake_ran # Mark that the build files have successfully been created
fi
ninja
popd
